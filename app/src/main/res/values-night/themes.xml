<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StoreSuper" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainColorDark</item>
        <item name="colorPrimaryVariant">@color/mainColorDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mainColorDark</item>
        <item name="colorSecondaryVariant">@color/mainColorDark</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorAccent">@color/black</item>
        <item name="colorPrimaryContainer">@color/black</item>
        <item name="colorPrimaryFixed">@color/black</item>
        <item name="colorOnPrimaryFixedVariant">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <item name="android:fontFamily">@font/noto_sans</item>

        <item name="android:textColor">@color/white</item>

        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.StoreSuper.NavigationBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/mainColorDark</item>
        <item name="colorOnPrimary">@color/black</item>



    </style>

    <style name="Theme.StoreSuper.BaseBackground" parent="Theme.StoreSuper">
        <item name="android:background">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.StoreSuper.MaterialCardView" parent="Theme.StoreSuper">
        <item name="cardBackgroundColor">@color/A</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">0dp</item>

    </style>
    <style name="Theme.StoreSuper.MaterialCardViewOutlined" parent="Theme.StoreSuper">
        <item name="cardBackgroundColor">@color/transparent</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>

    </style>

    <style name="Theme.StoreSuper.DescriptionText" parent="Theme.StoreSuper">
                <item name="android:textColor">#C4C6D0</item>
    </style>

    <style name="Theme.StoreSuper.MaterialSwitchText" parent="Theme.StoreSuper">
        <item name="android:textColor">@drawable/material_switch_text_colors_dark</item>

    </style>

    <style name="Theme.StoreSuper.MaterialButtonRoundedStart" parent="Theme.StoreSuper">
        <item name="cornerSizeTopRight">5dp</item>
        <item name="cornerSizeBottomLeft"></item>
        <item name="cornerSizeBottomRight">5dp</item>

    </style>

    <style name="Theme.StoreSuper.MaterialButtonRoundedEnd" parent="Theme.StoreSuper">
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerSizeBottomLeft">5dp</item>
        <item name="cornerSizeBottomRight"></item>

    </style>

    <style name="Theme.StoreSuper.MaterialCardViewRoundedBottom" parent="Theme.StoreSuper">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>

    </style>

    <style name="Theme.StoreSuper.MaterialRoundedAll" parent="Theme.StoreSuper">
        <item name="cornerSizeTopLeft"></item>
        <item name="cornerSizeTopRight"></item>
        <item name="cornerSizeBottomLeft"></item>
        <item name="cornerSizeBottomRight"></item>

    </style>



</resources>